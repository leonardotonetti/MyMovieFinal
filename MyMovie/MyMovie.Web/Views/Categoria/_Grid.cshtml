@model IEnumerable<MyMovie.Web.ViewModel.Categoria.CategoriaViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">Categorias</div>
        <div class="panel-body">
            <p>
                <a asp-action="Cadastrar">Cadastrar</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CategoriaId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CadastroUsuarioId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataCadastro)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AlteracaoUsuarioId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataAlteracao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ativo)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoriaId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CadastroUsuarioId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataCadastro)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AlteracaoUsuarioId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataAlteracao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ativo)
                            </td>
                            <td>
                                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.CategoriaId }) |
                                @Html.ActionLink("Editar", "Editar", new { id = item.CategoriaId }) |
                                @Html.ActionLink("Excluir", "Delete", new { id=item.CategoriaId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="validationErrors">
                @Html.ValidationSummary()
            </div>
        </div>
    </div>
</div>
