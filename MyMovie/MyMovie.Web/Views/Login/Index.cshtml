@model MyMovie.Web.ViewModel.Usuario.UsuarioViewModel
@{
    Layout = "_LayoutLogin";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <a href="@Url.Action("Index")" class="active">Logar</a>
                        </div>
                        <div class="col-xs-6">
                            <a href="@Url.Action("Index", "Usuario")">Registrar</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form id="formLogar" asp-controller="Login" asp-action="Entrar">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <input type="text" class="form-control" placeholder="Usuário" required maxlength="50" name="Usuario">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <input type="password" class="form-control" placeholder="Senha" required maxlength="50" name="Senha">
                                    </div>
                                </div>
                                <div class="validationErrors">
                                    @Html.ValidationSummary()
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <button type="submit" class="form-control btn btn-login">
                                                <span class="glyphicon glyphicon-log-in"></span> Entrar
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>