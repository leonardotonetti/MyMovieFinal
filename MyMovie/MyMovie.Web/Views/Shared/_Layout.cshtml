<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MyMovie</title>

    <link rel="stylesheet" href="~/Content/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/css/custom.css" />
</head>
<body>

    <div id="bla">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">MyMovie</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Opções <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Categoria" asp-action="Categorias">Categorias</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a asp-controller="Filme" asp-action="Filmes">Filmes</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a asp-controller="Login" asp-action="Sair">
                                <i class="glyphicon glyphicon-log-out"></i>
                                Sair
                            </a>
                        </li>
                    </ul>
                    <p class="navbar-text navbar-right">Bem vindo(a), <b class="navbar-link" id="userName"></b></p>
                </div>
            </div>
        </nav>
    </div>
    @RenderBody()

    <script src="~/Content/lib/jquery/dist/jquery.js"></script>
    <script src="~/Content/lib/bootstrap/dist/js/bootstrap.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
<script>
    (function() {
        $.get("@Url.Action("GetSessionUserName", "Home")").success(function(data) {
            if (data)
                $("#userName").text(data);
        });
    })();
</script>
