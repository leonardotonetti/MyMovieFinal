
@{
    Layout = "~/Views/Login/_LayoutLogin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <a href="@Url.Action("Index", "Login")">Logar</a>
                        </div>
                        <div class="col-xs-6">
                            <a href="@Url.Action("Index")" class="active">Registrar</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form id="formRegistrar" asp-controller="Usuario" asp-action="Registrar">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <input type="text" class="form-control" placeholder="Usuário" name="User" required maxlength="50">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                        <input type="email" class="form-control" placeholder="Email" name="Email" required maxlength="50">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <input type="password" class="form-control" placeholder="Senha" name="Senha" required title="A senha precisa ter no mínimo 5 caracteres" maxlength="50" pattern=".{5,}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <input type="password" class="form-control" placeholder="Confirmar senha" name="ConfirmarSenha" required title="A senha precisa ter no mínimo 5 caracteres" maxlength="50" pattern=".{5,}">
                                    </div>
                                </div>
                                <div class="validationErrors">
                                    @Html.ValidationSummary()
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <button type="submit" class="form-control btn btn-register">
                                                <span class="glyphicon glyphicon-floppy-save"></span> Registrar
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

